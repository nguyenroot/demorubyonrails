<li id="entry-<%= entry.id %>">
  <%= link_to gravatar_for(entry.user, size: 50), entry.user %>
  <span class="title"><%= link_to entry.title, entry %></span>
  <span class="content">
    <%= entry.body %>
  </span>
  <span class="timestamp">
    Posted by <span class="user"><%= link_to entry.user.name, entry.user %></span> about <%= time_ago_in_words(entry.created_at) %> ago.
    <% if current_user?(entry.user) %>
      <%= link_to "Delete", entry, method: :delete,
                                       data: { confirm: "Are you sure delete this entry?" } %>
    <% end %>
  </span>
  <ol class="comments">
    <%= render entry.comments %>
  </ol>
  <%= render 'shared/comment_form', object: entry %>
</li>
